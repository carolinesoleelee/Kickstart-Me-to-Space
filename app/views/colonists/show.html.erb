
<div class="colonistinfo">
<h1><%= @colonist.full_name %></h1>
<h3>Profile and Qualifications</h3>

<p><strong>Code Name:</strong> <%= @colonist.codename %></p>
<p><strong>Age:</strong> <%= @colonist.age %></p>
<p><strong>Gender:</strong> <%= @colonist.gender %></p>
<p><strong>Professional Qualifications:</strong> <%= @colonist.profession %></p>

<h2>Missions Scheduled</h2>
<ul style="
    clear: both;
    padding: 29px;">
  <% @colonist.planets.each do |planet|%>
  <li>
    <%= link_to "Mission: '#{planet.planet_code}' to #{planet.name} -  #{planet.launch_year}", planet, class: "mission" %>
  </li>
  <% end %>
</ul>


<% if session[:id]  == @colonist.id && session[:type] == "colonist" %>
  <%= link_to "Edit Profile", edit_colonist_path(@colonist), class: "editprofile"%>
<% end %>

</div>
