<h2><%= @planet.name %></h2>

<div class="planetshow">
<h3>Planet Code Name: <%= @planet.planet_code %></h3>
<h3>Launch Year: <%= @planet.launch_year %></h3>
<h3>Distance From Earth: <%= number_with_delimiter(@planet.distance, :delimiter => ',') %></h3>
<h3>Description:</h3>
<p><%= @planet.description %></p><br>

<h3>Funding Goal</h3>
<h4>$<%= number_with_delimiter(@planet.funding_goal, :delimiter => ',') %></h4>

<h3>Top Ten Donators</h3>
<% @planet.top_ten_sponsors.each_with_index do |sponsor,index| %>
<ol>
    <h5><%= "#{index + 1}. #{sponsor.keys[0]} - #{number_with_delimiter(sponsor.values[0], :delimiter => ',')}" %></h5>
</ol>
<% end %>

<h3>How Far Are We From Our Goal</h3>
<h3>$<%= number_with_delimiter(@planet.funding_gap, :delimiter => ',') %></h3>
<% if session[:sponsor_id] %>
  <%= link_to "Donate", new_donation_path%>
<% end %>

<h3>Mission Crew Members</h3>
<% @planet.colonists.each do |colonist| %>
  <h3><%= link_to colonist.full_name, colonist %></h3>
<% end %>
</div>
